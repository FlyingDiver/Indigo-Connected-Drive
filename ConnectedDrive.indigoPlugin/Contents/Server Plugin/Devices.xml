<?xml version="1.0"?>
<Devices>
    <SupportURL>https://forums.indigodomo.com/viewforum.php?f=295</SupportURL>

    <Device id="cdAccount" type="custom">
        <Name>Connected Drive Account</Name>
        <ConfigUI>
            <Field id="SupportsStatusRequest" type="checkbox" defaultValue="false" hidden="true" />
            <Field id="username" type="textfield"  defaultValue="">
				<Label>Username:</Label>
			</Field>
			<Field id="password" type="textfield" defaultValue="">
				<Label>Password:</Label>
			</Field>
        	<Field id="region" type="menu" defaultValue="NA">
        		<Label>Region:</Label>
        		<List>
        			<Option value="north_america">North America</Option>
        			<Option value="china">China</Option>
        			<Option value="rest_of_world">Rest of World</Option>
        		</List>
        	</Field>
            <Field id="captcha_note" type="label" fontColor="gray">
                <Label>
            Authentication requires a CAPTCHA token.
            Press the button to open a browser window to get the token.
            Copy the token and paste it into the field below.
            The token will be very long and not all visible.
            The "Open Window" button only works on the Indigo Server.
            If you are running the Indigo Client on a different machine,
            you will need to open a browser to the URL shown in the Indigo log.
                </Label>
            </Field>
            <Field id="openCaptcha" type="button">
                <Label>Get the Captcha Token:</Label>
                <Title>Open Window</Title>
                <CallbackMethod>open_browser_to_captcha</CallbackMethod>
            </Field>
			<Field id="captcha_token" type="textfield" defaultValue="">
				<Label>Captcha Token:</Label>
			</Field>
            <Field id="getTokens" type="button">
                <Label>Complete Authentication:</Label>
                <Title> GO </Title>
                <CallbackMethod>get_tokens</CallbackMethod>
            </Field>
            <Field id="authStatus" type="textfield" readonly="true">
                <Label>Authentication Status:</Label>
            </Field>
        </ConfigUI>
    </Device>

    <Device id="cdVehicle" type="custom">
        <Name>Connected Drive Vehicle</Name>
        <ConfigUI>
			<Field id="SupportsOnState" type="checkbox" defaultValue="false" hidden="true" />
			<Field id="SupportsSensorValue" type="checkbox" defaultValue="true" hidden="true" />
			<Field id="SupportsStatusRequest" type="checkbox" defaultValue="true" hidden="true" />
            <Field id="address" type="menu">
                <Label>Vehicle:</Label>
                <List class="self" method="get_vehicle_list" dynamicReload="true"/>
                <CallbackMethod>menuChanged</CallbackMethod>
            </Field>
            <Field id="state_key" type="menu">
                <Label>State Key:</Label>
                <List class="self" method="get_vehicle_state_list" dynamicReload="true"/>
                <CallbackMethod>menuChanged</CallbackMethod>
            </Field>
        </ConfigUI>    
        <States>
            <State id="status">
                <ValueType>String</ValueType>
                <TriggerLabel>UI Status</TriggerLabel>
                <ControlPageLabel>UI Status</ControlPageLabel>
            </State>
            <State id="vin">
