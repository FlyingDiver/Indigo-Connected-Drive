<?xml version="1.0"?>
<Actions>
    <SupportURL>https://forums.indigodomo.com/viewforum.php?f=295</SupportURL>
    <Action id="sendCommand" deviceFilter="self.cdVehicle">
        <Name>Send Command</Name>
        <CallbackMethod>sendCommandAction</CallbackMethod>
        <ConfigUI>
        	<Field id="serviceCode" type="menu">
        		<Label>Service:</Label>
        		<List>
        			<Option value="climate">Air Conditioning</Option>
        			<Option value="lock">Door Lock</Option>
        			<Option value="unlock">Door Unlock</Option>
        			<Option value="light">Light Flash</Option>
        			<Option value="horn">Beep Horn</Option>
        		</List>
        	</Field>
       </ConfigUI>
    </Action>
 </Actions>
